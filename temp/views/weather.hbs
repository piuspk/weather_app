  <script>
    const pp = document.getElementById("today_date");
    const day = document.getElementById("day");
        const currtime = new Date();
        const func = () => {
            var days = ["sunday", "monday", "tuesday", "wednesday", "thursday", "friday", "saturday"]
            var today = currtime.getDay();

            //   console.log(days[today]);
            return days[today];
        }
        const func2 = () => {
            var hours = currtime.getHours();
            let str = "PM";
            if (hours < 12) {
                str = "AM";
            }
            if (hours > 12) {
                hours -= 12;
            }
            var mins = currtime.getMinutes();
            var date = currtime.getDate();
            var month = currtime.getMonth();
            var months = ["jan", "feb", "mar", "apr", "may", "jun", "jul", "aug", "sep", "oct", "nov", "dec"]
            var mon = months[month];
            var year = currtime.getFullYear();
            var seconds = currtime.getSeconds();


            return hours + ":" + mins + ":" + seconds + "" + str + ", " + date + " " + mon + " " + year;
        }
